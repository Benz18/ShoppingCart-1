
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section main {
    <div class="body-content outer-top-bd">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h4>Status: <span id="txtStatus">Unknown</span></h4>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <input id="txtOrderId" type="text" placeholder="Order Id" class="form-control" />                    
                </div>
            </div>
            <div class="row" style="margin-top: 5px; margin-bottom: 5px;">
                <div class="col-lg-12">
                    <div class="pull-right">
                        <button id="btnCheck" class="btn btn-primary" onclick="checkStatus($('#txtOrderId').val());">Check</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">

        function checkStatus(orderId) {
            console.log(orderId);
            $("#btnCheck").prop("disabled", true);
            $("#btnCheck").text("Checking...");
            $.ajax({
                type: "POST",
                url: "/Payment/GetPaymentStatus",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify({ "paymentId": orderId }),
                success: function (data) {
                    console.log(data);
                    $("#btnCheck").prop("disabled", false);
                    $("#btnCheck").text("Check");
                    $("#txtStatus").text(data);
                },
                error: function (data) {
                    console.error(data);
                    $("#btnCheck").prop("disabled", true);
                    $("#btnCheck").text("Check");
                }
            });
        }

    </script>

}

