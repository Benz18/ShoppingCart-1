@model ShoppingCart.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section main {

    <div class="body-content outer-top-bd">
        <div class="container">
            <div class="sign-in-page inner-bottom-sm">
                <div class="row">
                    <!-- create a new account -->
                    <div class="col-md-12 col-sm-12 create-new-account">
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "register-form outer-top-xs", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <h4>Create a new account.</h4>
                            <hr />
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "info-title" })
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control unicase-form-control text-input" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "info-title" })
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control unicase-form-control text-input" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "info-title" })
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control unicase-form-control text-input" })
                            </div>
                            <div class="form-group">
                                    <input type="submit" class="btn-upper btn btn-primary checkout-page-button" value="Register" />
                            </div>
                        }
                    </div>
                    <!-- create a new account -->
                 </div>
             </div>
         </div>
    </div>

}

