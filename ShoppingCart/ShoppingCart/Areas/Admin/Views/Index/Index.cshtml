
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section main {

    <div class="row">
        <div class="col-lg-12">
            <div id="UserTableContainer"></div>
        </div>
    </div>

    <script>
        $(document)
            .ready(function() {
                //Prepare jtable plugin
                $('#UserTableContainer')
                    .jtable({
                        title: 'List User',
                        actions: {
                            listAction: '/Index/GetListUser',
                            createAction: '/Index/AddUser',
                            updateAction: '/Index/UpdateUser',
                            deleteAction: '/Index/DeleteUser'
                        },
                        fields: {
                            Id: {
                                key: true,
                                create: false,
                                edit: false,
                                list: false,
                                title: "Username"
                            },
                            UserName: {
                                edit: false,
                                title: 'Username',
                                width: '5%'
                            },
                            Password:{
                                title: 'Password',
                                type: 'password',
                                list: false
                            }
                        }
                    });

                //Load student list from server
                $('#UserTableContainer').jtable('load');
            });
    </script>

}